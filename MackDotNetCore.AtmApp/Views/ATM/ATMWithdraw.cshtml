@model List<BlogDataModel> 

<h4>Hello, Sir. Please fill the input boxes to withdraw.</h4>

<form action="/atm/withdraw" method="post">

	<div class="mb-3">
		<label class="form-label">CardNumber</label>
		<input type="text" name="CardNum" class="form-control">
	</div>
	<div class="mb-3">
		<label class="form-label">PinNumber</label>
		<input type="text" name="Pin" class="form-control">
	</div>
	<div class="mb-3">
		<label class="form-label">Balance</label>
		<input type="text" name="Balance" class="form-control">
	</div>
	<a href="/home" type="button" class="btn btn-secondary">Cancel</a>
	<button type="submit" class="btn btn-success">WithDraw</button>
</form>